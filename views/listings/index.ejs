<% layout("/layouts/boilerplate") %>

  <body>
    <h3>All Listing</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for(let listing of allListings){ %>
        <a class="lisgin-link" href="/listing/<%=listing._id %>">

          <div class="card col" style="width: 20rem;">
            <img class="card-img-top" src="<%=  listing.image.url || listing.image %>" alt="Card image cap" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <b>
                <p class="card-text">
                  <%= listing.title %>
              </b>

              </p>
              <br>
              <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %>
              </p>
            </div>
          </div>
        </a>
        <%}%>
    </div>

  </body>

  </html>